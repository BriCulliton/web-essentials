input,
select,
textarea,
fieldset
  font-size $form-field-font-size
  margin-top 0
  margin-bottom $space-1, .5rem
  -webkit-appearance none
  -moz-appearance none

input[type=text],
input[type=datetime],
input[type=datetime-local],
input[type=email],
input[type=month],
input[type=number],
input[type=password],
input[type=search],
input[type=tel],
input[type=time],
input[type=url],
input[type=week]
  box-sizing border-box
  height $form-field-height
  vertical-align middle

select
  box-sizing border-box
  line-height 1.75

  &:not([multiple])
    height $form-field-height
    vertical-align middle

  &.field-light
    padding 5px 30px 5px 5px
    -webkit-appearance none
    text-indent 5px
    background-position right 10px center
    background-size 12px 7px
    background-repeat no-repeat
    background-image url(data:image/png)

.select
  height 28px
  padding-top 5px
  box-sizing border-box

textarea
  box-sizing border-box
  line-height 1.75
  min-height 100px

.fieldset-reset
  padding 0
  margin-left 0
  margin-right 0
  border 0

  legend
    padding 0

.field-reset
  border none
  outline 0
  color $dark-gray

.field-simple
  font-size $body-text-small
  -webkit-appearance none
  color $gray
  font-weight $semibold-font-weight
  background-color white
  border none
  margin -3px 0 0
  width auto
  padding 0 $space-2 0 $space-1
  height inherit !important
  background-position right 10px
  background-size 12px 7px
  background-repeat no-repeat
  background-image url(data:image/png)

  &:focus
    outline none

  &:disabled
    color $mid-gray

  &:read-only
    &:not(select)
      color $darken-2

  &:invalid
    color $red

  &.is-success
    color $green

  &.is-warning
    color $yellow

  &.is-error
    color $red

.field-light
  background-color $true-white
  border-style solid
  border-width $border-width
  border-color rgba($border-color,.8)
  border-radius $border-radius
  color $gray
  height 38px

  &:focus
    outline none
    border-color $blue
    box-shadow 0 0 2px rgba($blue,.5)

  &:disabled
    color $mid-gray
    background-color $light-gray-blue
    opacity 0.6

  &:read-only
    &:not(select)
      background-color $darken-2

  &:invalid
    border-color $red

  &.is-success
    border-color $green

  &.is-warning
    border-color $yellow

  &.is-error
    border-color $red

.radio-light,
.checkbox-light
  transition box-shadow .2s ease

.radio-light
  border-radius 50%

.radio-light:focus,
.checkbox-light:focus
  outline none
  box-shadow 0 0 2px rgba($blue,.5)

.field-dark
  color white
  background-color $darken-3
  border 1px solid $darken-1
  border-radius $border-radius

  &::placeholder
    color rgba(#fff,.75)

  &:focus
    outline 0
    border 1px solid rgba(#fff,.5)

  &:read-only
    &:not(select)
      background-color rgba(#fff,.25)

  &:invalid
    border-color $red

  &.is-success
    border-color $green

  &.is-warning
    border-color $yellow

  &.is-error
    border-color $red

.switch
  height 28px
  overflow hidden

  span
    padding 7px 12px
    min-width 60px
    cursor pointer