body
  font-family $font-family
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-weight $normal-font-weight
  line-height $line-height
  font-size 100%
  color $mid-gray
  background-color white

h1, h2, h3, h4, h5, h6
  font-family $heading-font-family
  font-weight $heading-font-weight
  line-height $heading-line-height
  margin-top 1em
  margin-bottom .5em

p, dl, ol, ul
  font-size $body-text
  line-height $body-line-height
  margin-top 0
  margin-bottom $space-2

ol, ul
  padding-left $space-3

pre, code, samp
  border-radius $border-radius
  font-family $monospace-font-family
  font-size inherit

pre
  margin-top 0
  margin-bottom $space-2
  overflow-x scroll
  padding .4rem 1rem .5rem

  & > code
    padding 0
    border none
    background-color transparent

code, pre
  background-color $transparent-light-blue
  border 1px solid $transparent-light-blue-border

code
  padding 0 0.3rem
  color $blue

hr
  margin-top $space-3
  margin-bottom $space-3
  border 0
  border-bottom-style solid
  border-bottom-width $border-width
  border-bottom-color $border-color

blockquote
  margin-top $space-3
  margin-bottom $space-3
  margin-left 0
  padding-left $space-2
  padding-right $space-2

blockquote,
blockquote p
  font-size $h3
  font-style italic

a
  color $blue
  text-decoration none

h1, .h1
  font-size $h1

h2, .h2
  font-size $h2

h3, .h3
  font-size $h3
  margin-bottom .5em

h4, .h4
  font-size $h4
  line-height 1.5

h4.big, .h4.big
  font-size $h3 + 0.2em

h5, .h5
  font-size $h5
  line-height 1.3

h6, .h6
  font-size $h6

.h7
  font-size $h7

.body-text
  font-size $body-text

.body-text-small
  font-size $body-text-small
  line-height $body-text-small-line-height

.list-reset
  list-style none
  padding-left 0

.heavy
  font-weight $heavy-font-weight

.bold
  font-weight $bold-font-weight

.regular
  font-weight normal
  font-weight $normal-font-weight

.italic
  font-style italic

.caps
  text-transform uppercase
  letter-spacing .07rem

.left-align
  text-align left

.center
  text-align center

.right-align
  text-align right

.justify
  text-align justify

.pre-wrap
  white-space pre-wrap

.nowrap
  white-space nowrap

.lighter
  font-weight $light-font-weight

.heavier
  font-weight $heavy-font-weight

.uppercase
  text-transform uppercase

.letter-spacing
  letter-spacing 0.05rem

.line-height-0
  line-height 0

.line-height-1
  line-height 1

.font-size-0
  font-size: 0