colors = true-black black blue transparent-blue dark-blue red transparent-red green transparent-green yellow transparent-yellow dark-gray gray wunderlist-gray mid-gray light-gray light-gray-blue lighter-gray lightest-gray white off-white true-white transparent-light-blue transparent-light-blue-border darken-1 darken-2 darken-3 darken-4

  for color in colors

    .{color}
      color $+color

    .hover-{color}:hover
      color $+color

    .bg-{color}
      background-color $+color

    .bg-faded-{color}
      background-color rgba($+color,0.05)

    .bg-overlay-{color}
      background-color rgba($+color,0.95)

    .border-{color}
      border-color $+color !important

    .outline-{color}
      box-shadow: 0 0 0 1px rgba($+color, .75)

.bg-transparent
  background-color transparent

.muted
  opacity .5

.drop-shadow
  box-shadow 0 1px 2px rgba(0,0,0,.07)

.faded-white
  background -webkit-linear-gradient(top, rgba(255,255,255,0), rgba(255,255,255, 1))