@keyframes rotate
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)

button,
.button
  font-size $button-font-size
  line-height $button-line-height
  padding $button-padding-y $button-padding-x $button-padding-y - 2px

.small-button
  font-size 0.6rem
  line-height $button-line-height
  padding 6px 9px

::-moz-focus-inner
  border 0
  padding 0

.button
  &:hover
    text-decoration none
    opacity .875
  &:focus
    outline none
    border-color $darken-2

.button-small
  padding $button-small-padding-y $button-small-padding-x

.button-big
  padding $button-big-padding-y $button-big-padding-x

.button-narrow
  padding-left $space-1
  padding-right $space-1

.button, .small-button
  color white
  cursor pointer
  box-sizing border-box
  margin 0
  height auto
  font-weight $button-font-weight
  display inline-block
  text-decoration none
  background-color $blue
  border 1px solid transparent
  position relative
  vertical-align middle
  -webkit-appearance none
  text-transform uppercase
  letter-spacing 0.07em
  border-radius $border-radius
  transition-duration .05s
  transition-timing-function ease-out
  transition-property opacity

.button:active,
.button.is-active

.button:disabled,
.button.is-disabled
  opacity .5

.button-upvote
  text-transform none
  padding 0
  width 45px
  height 45px
  text-align center

  &.loading
    position relative
    background-color $blue
    border-color $blue
    color $blue

    &:before
      animation rotate 1s ease infinite
      transform rotate(0deg)
      content 'y'
      left 12px
      top 12px
      font-family 'Wundercon'
      font-weight 300
      position absolute
      color white
      font-size 20px
      line-height 1em
      width 20px
      height 20px
      z-index 1

  .wundercon
    transform rotate(90deg)
    text-align center
    position relative
    top 4px
    left -1px

.button-circle
  background transparent
  text-align center
  border-radius 50%
  padding 5px

.button-icon
  font-size 1.2em
  position relative

.button-white
  color $wunderlist-gray
  background-color white
  border-color $lighter-gray
  border-radius $border-radius
  transition-duration .1s
  transition-timing-function ease-out
  transition-property box-shadow, background-color

.button-white-header
  color $blue
  background-color white
  border-radius $border-radius
  transition-duration .1s
  transition-timing-function ease-out
  transition-property box-shadow, background-color

.button-outline
  position relative
  z-index 2
  color inherit
  background-color transparent
  border-radius $border-radius
  border $border-width solid currentcolor
  transition-duration .1s
  transition-timing-function ease-out
  transition-property box-shadow, background-color

  &:before
    content ''
    width 100%
    height 100%
    display block
    position absolute
    z-index -1
    top -1px
    left -1px
    border 1px solid transparent
    background-color currentcolor
    border-radius $border-radius
    transition-duration .1s
    transition-timing-function ease-out
    transition-property opacity
    opacity 0

  &:hover
    box-shadow none

    &:before
      opacity .125

  &:focus
    outline none
    border $border-width solid currentcolor

.button-outline:active,
.button-outline.is-active

.button-outline:disabled,
.button-outline.is-disabled
  opacity .5

.button-transparent
  position relative
  z-index 2
  color inherit
  background-color transparent
  border-radius 0
  border $border-width solid transparent
  transition-duration .1s
  transition-timing-function ease-out
  transition-property box-shadow

  &:before
    content ''
    width 100%
    height 100%
    display block
    position absolute
    z-index -1
    top -1px
    left -1px
    border 1px solid transparent
    background-color currentcolor
    transition-duration .1s
    transition-timing-function ease-out
    transition-property opacity
    opacity 0

  &:hover
    box-shadow none

    &:before
      opacity .0625
      opacity .09375

  &:focus
    outline none
    border-color transparent
    box-shadow 0 0 3px

.button-transparent:active:before,
.button-transparent.is-active:before
  opacity .0625

.button-transparent:disabled,
.button-transparent.is-disabled
  opacity .5

.button-nav-light
  &:hover
    background-color $hover-background-color

.button-nav-light:active,
.button-nav-light.is-active
  color $dark-gray

.button-nav-dark
  color white

  &:hover
    background-color $darken-2

.button-nav-dark:active,
.button-nav-dark.is-active
  background-color $darken-2